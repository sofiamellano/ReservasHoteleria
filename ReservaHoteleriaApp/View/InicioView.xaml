<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ReservaHoteleriaApp.ViewModel"
             x:Class="ReservaHoteleriaApp.View.InicioView"
             Title="InicioView">
    <ContentPage.BindingContext>
        <vm:InicioViewModel/>
    </ContentPage.BindingContext>
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">

        <Button Text="Reservas" WidthRequest="150" HeightRequest="150" Command="{Binding ReservasCommand}"/>

        <Button Text="Servicios" WidthRequest="150" HeightRequest="150" Command="{Binding ServiciosCommand}"/>

        <Button Text="Perfil" WidthRequest="150" HeightRequest="150" Command="{Binding PerfilCommand}"/>

    </StackLayout>
        
</ContentPage>